
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:id="listReportsScreen" prefWidth="943.0" prefHeight="837.0" stylesheets="@style2.css" styleClass="borderPaneProjectScreen" fx:controller="main.java.ListReportsController">
    <!-- Top section with Close button -->
    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT" padding="10.0">
            <Button text="CLOSE" styleClass="largeButton" onAction="#handleClose"/>
        </HBox>
    </top>

    <!-- Center section with title and reports -->
    <center>
        <VBox spacing="20.0" alignment="TOP_CENTER" padding="20.0">
            <!-- Title -->
            <StackPane styleClass="titleStackPane">
                <Label text="REPORTS" styleClass="loginTitleLabel"/>
            </StackPane>

            <!-- Reports List -->
            <VBox spacing="10.0" alignment="CENTER" maxWidth="800">
                <Separator/>
                <VBox fx:id="reportsContainer" spacing="10.0">
                    <!-- Example report entry -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Do we need this?"/>
                        <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
                        <Label text="Date: 22-10-24 | Hunter"/>
                    </HBox>
                    <!-- Dynamic list will populate here -->
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>