<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane stylesheets="style2.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="newProjectAnchorPane" fx:controller="main.java.NewProjectController"
            prefWidth="1500.0" prefHeight="980.0" styleClass="anchorPane">
    <BorderPane fx:id="newProjectScreen" styleClass="borderPane"
                layoutX="407.0" layoutY="271.5" prefWidth="943.0" prefHeight="919.0">
        <!-- Top Section: Title -->
        <top>
            <StackPane styleClass="titleStackPane">
                <Label fx:id="titleLabel" text="PROJECT N" styleClass="loginTitleLabel"/>
            </StackPane>
        </top>

        <!-- Center Section: Input Fields -->
        <center>
            <VBox spacing="20.0" alignment="CENTER" styleClass="centerVBox">
                <children>
                    <TextField fx:id="projectTitleField" promptText="Enter project title here..." styleClass="textFieldInput"/>
                    <TextArea fx:id="projectDescriptionArea" promptText="Enter task description..." styleClass="textFieldInput" prefHeight="100.0"/>
                    <TextField fx:id="dueDateField" promptText="Enter due date (DD-MM-YY)" styleClass="textFieldInput"/>
                    <VBox spacing="10.0" alignment="CENTER_LEFT">
                        <children>
                            <Label text="Assigned workers" styleClass="fieldLabel"/>
                            <ListView fx:id="workersListView" editable="true" styleClass="listView" />
                        </children>
                    </VBox>
                </children>
                <VBox.margin>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </VBox.margin>
            </VBox>
        </center>

        <!-- Bottom Section: Buttons -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0" styleClass="bottomHBox">
                <children>
                    <Button fx:id="createButton" text="CREATE" styleClass="largeButton" onAction="#handleCreate"/>
                    <Button fx:id="cancelButton" text="CANCEL" styleClass="largeButton" onAction="#handleCancel"/>
                    <Button fx:id="deleteButton" text="DELETE" styleClass="largeButton" onAction="#handleDelete"/>
                </children>
                <HBox.margin>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </HBox.margin>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
