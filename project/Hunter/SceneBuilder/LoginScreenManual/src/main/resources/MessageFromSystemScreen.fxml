<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane stylesheets="style2.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="messageAnchorPane" fx:controller="main.java.MessageFromSystemController"
            prefWidth="1500.0" prefHeight="980.0" styleClass="anchorPane">
    <BorderPane fx:id="messageScreen" styleClass="borderPane"
                layoutX="407.0" layoutY="271.5" prefWidth="943.0" prefHeight="759.0">
        <!-- Top Section: Title -->
        <top>
            <StackPane styleClass="titleStackPane">
                <Label fx:id="titleLabel" text="MESSAGE TO USER" styleClass="loginTitleLabel"/>
            </StackPane>
        </top>

        <!-- Center Section: Input Fields -->
        <center>
            <VBox spacing="20.0" alignment="CENTER" styleClass="centerVBox">
                <children>
                    <TextField fx:id="messageTitleField" promptText="message title..." editable="false" styleClass="textFieldInput"/>
                    <TextArea fx:id="messageBodyArea" promptText="message body..." editable="false" styleClass="textFieldInput" prefHeight="200.0"/>
                </children>
                <VBox.margin>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </VBox.margin>
            </VBox>
        </center>

        <!-- Bottom Section: Close Button -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0" styleClass="bottomHBox">
                <children>
                    <Button fx:id="closeButton" text="CLOSE" styleClass="largeButton" onAction="#handleClose"/>
                </children>
                <HBox.margin>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </HBox.margin>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
