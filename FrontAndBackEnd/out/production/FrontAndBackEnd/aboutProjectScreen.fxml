<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" xmlns:fx="http://javafx.com/fxml" fx:controller="main.java.aboutProjectController" stylesheets="@style2.css" styleClass="anchorPane">
    <children>
        <BorderPane fx:id="borderPane" styleClass="borderPane" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <top>
                <StackPane fx:id="titleStackPane" styleClass="titleStackPane" BorderPane.alignment="CENTER">
                    <Label fx:id="projectTitleLabel" text="About Project" styleClass="projectTitleLabel" />
                </StackPane>
            </top>
            <center>
                <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER" style="-fx-padding: 20;">
                    <children>
                        <ScrollPane fitToWidth="true" fitToHeight="true">
                            <content>
                                <Label fx:id="projectDetailsLabel" text="Project details will appear here" wrapText="true" textAlignment="CENTER" styleClass="messageLabel" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER" style="-fx-padding: 10;">
                    <children>
                        <Button text="Close" onAction="#handleCloseButton" styleClass="smallButton" />
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>