<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="main.java.TaskScreenController">
    <children>
        <BorderPane prefWidth="800" prefHeight="600" styleClass="borderPane">
            <top>
                <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="taskTitleLabel" text="Task Title" styleClass="messageLabel" />
                    </children>
                </VBox>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Assigned User:" styleClass="messageLabel" />
                                <Label fx:id="assignedUserLabel" text="John Doe" styleClass="messageLabel" />
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Priority:" styleClass="messageLabel" />
                                <Label fx:id="priorityLabel" text="High" styleClass="messageLabel" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER" style="-fx-padding: 10;">
                    <children>
                        <Button text="Back" onAction="#handleClose" styleClass="smallButton" />
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>