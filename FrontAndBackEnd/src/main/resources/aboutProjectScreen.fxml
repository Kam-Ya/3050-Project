<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane" styleClass="anchorPane" stylesheets="@style2.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="main.java.aboutProjectController">
    <children>
        <BorderPane fx:id="borderPane" layoutX="112.0" layoutY="87.0" styleClass="borderPane">
            <top>
                <StackPane fx:id="titleStackPane" styleClass="titleStackPane" BorderPane.alignment="CENTER">
                    <Label fx:id="projectTitleLabel" styleClass="projectTitleLabel" text="About Project" />
                </StackPane>
            </top>
            <center>
                <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
                    <children>
                        <ScrollPane fitToHeight="true" fitToWidth="true">
                            <content>
                                <Label fx:id="projectDetailsLabel" styleClass="messageLabel" text="Project details will appear here" textAlignment="CENTER" wrapText="true" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
                    <children>
                        <Button onAction="#handleCloseButton" styleClass="smallButton" text="Close" />
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
