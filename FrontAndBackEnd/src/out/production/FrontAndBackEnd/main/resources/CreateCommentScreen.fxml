<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="createCommentAnchorPane" prefHeight="980.0" prefWidth="1500.0" styleClass="anchorPane" stylesheets="@style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.CreateCommentController">
    <BorderPane fx:id="createCommentScreen" layoutX="104.0" layoutY="88.0" prefHeight="635.0" prefWidth="943.0" styleClass="borderPane">
        <!-- Top Section: Title -->
        <top>
            <StackPane styleClass="titleStackPane">
                <Label styleClass="loginTitleLabel" text="LEAVE A NOTE" />
            </StackPane>
        </top>

        <!-- Center Section: Comment Body -->
        <center>
            <VBox alignment="TOP_CENTER" spacing="20.0">
                <children>
                    <TextArea fx:id="bodyTextArea" prefHeight="300" prefWidth="800" promptText="message body..." styleClass="textAreaField" wrapText="true" />
                </children>
                <VBox.margin>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </VBox.margin>
            </VBox>
        </center>

        <!-- Bottom Section: Buttons -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0">
                <children>
                    <Button fx:id="sendButton" onAction="#handleSend" styleClass="smallButton" text="SEND" />
                    <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="smallButton" text="CANCEL" />
                </children>
                <HBox.margin>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </HBox.margin>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
